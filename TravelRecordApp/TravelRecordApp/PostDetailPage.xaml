<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TravelRecordApp.PostDetailPage">

    <StackLayout>
        <Entry x:Name="expierienceEntry"/>
        <Label x:Name="venueLabel"
               Margin="0,30,0,0"
               FontAttributes="Bold"
               FontSize="22"
               Text="MusterVenueName"/>
        <Label x:Name="categoryLabel"
               TextColor="DodgerBlue"
               FontSize="15"
               Text="MusterVenueCategory" />
        <Label x:Name="addressLabel"
               FontSize="15"
               Text="MusterVenueAddress" />
        <Label x:Name="coordinatesLabel"
               FontSize="15"
               Text="MusterVenueCoordinates" />
        <Label x:Name="distanceLabel"
               FontSize="15"
               Text="MusterVenueDIstance" />
        <Button x:Name="updateButton"
                Text="Update"
                Clicked="UpdateButton_Clicked"/>
        <Button x:Name="deleteButton"
                Text="Delete"
                Clicked="DeleteButton_Clicked" />
    </StackLayout>
</ContentPage>